<div class="formContainer">
    <form class="form-horizontal newsletterForm" role="form" action="/notify-me-when-in-work" method="POST">
        <div class="form-group">
            <label for="fieldEmail" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-4">
                <input type="email" class="form-control" required id="fieldName" name="email">
            </div>
        </div>
        <div class="form-group">
            <label for="fieldDate" class="col-sm-2 control-label">Date</label>
            <div class="col-sm-4">
                <input type="date" class="form-control" required id="fieldDate" name="date">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </form>
</div>
